<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_bigger"
    android:paddingRight="@dimen/padding_bigger"
    android:paddingTop="@dimen/padding_medium">

    <TextView
        android:id="@+id/lblTitle"
        style="@style/Text.Title.Black"
        android:layout_alignParentTop="true"
        android:gravity="left|center"
        android:text="Title" />

    <TextView
        android:id="@+id/lblDescription"
        style="@style/Text.Title.Black"
        android:layout_below="@id/lblTitle"
        android:layout_marginTop="@dimen/padding_normal"
        android:layout_marginBottom="@dimen/padding_normal"
        android:singleLine="false"
        android:gravity="left|center"
        android:text="Description"
        android:textColor="@color/cmn_text_gray"
        android:textSize="@dimen/text_normal" />

    <View
        android:id="@+id/viewDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cmn_divider_gray"
        android:layout_below="@id/lblDescription" />
</RelativeLayout>